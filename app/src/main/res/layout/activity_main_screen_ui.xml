<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.cmput301f16t09.unter.MainScreenUIActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/textWelcome"
        android:textSize="80sp"
        android:textColor="@color/TextColor"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rider"
        android:id="@+id/textRider"
        android:textSize="52sp"
        android:textColor="@color/TextColor"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textWelcome"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:text="@string/request_a_ride"
        android:textSize="22sp"
        android:textColor="@color/background"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:id="@+id/RequestARideButton"
        android:layout_below="@+id/textWelcome" />

    <Button
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:text="@string/my_ride_requests"
        android:textSize="22sp"
        android:textColor="@color/background"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/RequestARideButton"
        android:layout_below="@+id/textWelcome"
        android:id="@+id/MyRideRequestsButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/driver"
        android:id="@+id/textDriver"
        android:textSize="52sp"
        android:textColor="@color/TextColor"
        android:layout_below="@+id/textRider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:textSize="22sp"
        android:text="@string/provide_a_ride"
        android:textColor="@color/background"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:id="@+id/ProvideARideButton"
        android:layout_below="@+id/RequestARideButton"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:textSize="22sp"
        android:text="@string/my_ride_offers"
        android:textColor="@color/background"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="100dp"
        android:id="@+id/MyRideOffersButton"
        android:layout_below="@+id/MyRideRequestsButton"
        android:layout_toEndOf="@+id/ProvideARideButton"/>

</RelativeLayout>
