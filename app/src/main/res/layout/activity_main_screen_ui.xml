<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.cmput301f16t09.unter.MainScreenUIActivity">

    <TextView
        android:id="@+id/textViewMainScreenWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/welcome"
        android:textSize="80sp"
        android:textColor="@color/TextColor"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/textViewMainScreenRider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMainScreenWelcome"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="@string/rider"
        android:textSize="52sp"
        android:textColor="@color/TextColor"
        android:fontFamily="sans-serif-smallcaps" />

    <Button
        android:id="@+id/MainScreenRequestARideButton"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textViewMainScreenWelcome"
        android:layout_marginStart="5dp"
        android:layout_marginTop="120dp"
        android:text="@string/request_a_ride"
        android:textSize="22sp"
        android:textColor="@color/background"
        android:fontFamily="sans-serif-smallcaps" />
    <Button
        android:id="@+id/MainScreenMyRideRequestsButton"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textViewMainScreenWelcome"
        android:layout_toEndOf="@+id/MainScreenRequestARideButton"
        android:layout_alignBottom="@+id/MainScreenRequestARideButton"
        android:layout_marginTop="120dp"
        android:layout_marginStart="50dp"
        android:text="@string/my_ride_requests"
        android:textSize="22sp"
        android:textColor="@color/background"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/textViewMainScreenDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMainScreenRider"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:text="@string/driver"
        android:textSize="52sp"
        android:textColor="@color/TextColor"
        android:fontFamily="sans-serif-smallcaps" />

    <Button
        android:id="@+id/MainScreenProvideARideButton"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_below="@+id/MainScreenRequestARideButton"
        android:layout_marginStart="5dp"
        android:layout_marginTop="130dp"
        android:text="@string/provide_a_ride"
        android:textSize="22sp"
        android:textColor="@color/background"
        android:fontFamily="sans-serif-smallcaps" />

    <Button
        android:id="@+id/MainScreenMyRideOffersButton"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_below="@+id/MainScreenMyRideRequestsButton"
        android:layout_toEndOf="@+id/MainScreenProvideARideButton"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="130dp"
        android:textSize="22sp"
        android:text="@string/my_ride_offers"
        android:textColor="@color/background"
        android:fontFamily="sans-serif-smallcaps" />

</RelativeLayout>
