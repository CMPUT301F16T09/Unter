<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.cmput301f16t09.unter.MainScreenUIActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/MainScreenRider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.1"
            android:layout_marginTop="10dp"
            android:text="@string/rider"
            android:textSize="52sp"
            android:textColor="@color/TextColor"
            android:fontFamily="sans-serif-smallcaps" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:weightSum="1.0">

            <Button
                android:id="@+id/MainScreenRequestARideButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp"
                android:text="@string/request_a_ride"
                android:textSize="22sp"
                android:textColor="@color/background"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="requestARide"/>

            <Button
                android:id="@+id/MainScreenMyRideRequestsButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:layout_marginStart="10dp"
                android:text="@string/my_ride_requests"
                android:textSize="22sp"
                android:textColor="@color/background"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="myRideRequests"/>

        </LinearLayout>

        <TextView
            android:id="@+id/MainScreenDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.1"
            android:text="@string/driver"
            android:textSize="52sp"
            android:textColor="@color/TextColor"
            android:fontFamily="sans-serif-smallcaps" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.3"
            android:weightSum="1.0">

            <Button
                android:id="@+id/MainScreenProvideARideButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp"
                android:text="@string/provide_a_ride"
                android:textSize="22sp"
                android:textColor="@color/background"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="provideARide"/>

            <Button
                android:id="@+id/MainScreenMyRideOffersButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:layout_marginStart="10dp"
                android:textSize="22sp"
                android:text="@string/my_ride_offers"
                android:textColor="@color/background"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="myRideOffers"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:weightSum="1.0">

            <Button
                android:id="@+id/NotificationButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="My Notifications"
                android:textSize="22sp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="viewNotifications" />
        </LinearLayout>


    </LinearLayout>
