<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/minFareDollarKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:id="@+id/searchMinFareKM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/minFareDollarKM"
        android:layout_alignBaseline="@id/minFareDollarKM"
        android:hint="Minimum Fare/km"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/maxFareDollarKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minFareDollarKM"
        android:layout_marginTop="20sp"
        android:text="$"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:id="@+id/searchMaxFareKM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/maxFareDollarKM"
        android:layout_alignBaseline="@id/maxFareDollarKM"
        android:hint="Maximum Fare/km"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/maxFareDollarKM"
        android:weightSum="1.0">

        <Button
            android:id="@+id/searchFareKMConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_alignParentStart="true"
            android:text="Confirm"
            android:textSize="24sp"
            android:fontFamily="sans-serif-smallcaps" />

        <Button
            android:id="@+id/searchFareKMCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_alignBaseline="@+id/searchAddressConfirm"
            android:text="Cancel"
            android:textSize="24sp"
            android:fontFamily="sans-serif-smallcaps" />
    </LinearLayout>

</RelativeLayout>