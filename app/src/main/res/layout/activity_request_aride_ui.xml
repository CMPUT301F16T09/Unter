<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.cmput301f16t09.unter.RequestARideUIActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request A Ride"
        android:id="@+id/textViewRequestARide"
        android:textSize="42sp"

        android:textColor="@color/TextColor"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/editTextStartLocation"
        android:layout_below="@+id/textViewRequestARide"
        android:layout_alignStart="@+id/textName"
        android:textColor="@color/TextColor"
        android:hint="Enter Start Location"
        android:textColorHint="@color/HintTextColor"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="@color/TextColor"
        android:id="@+id/textViewEstimatedFare"
        android:hint="Enter Start Location"
        android:text="Estimated\nFare"
        android:textAlignment="center"
        android:layout_marginLeft="25dp"
        android:layout_toEndOf="@+id/editTextStartLocation"
        android:layout_alignBottom="@id/editTextStartLocation"
        />

    <EditText
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:id="@+id/editTextEstimatedFare"
        android:textColor="@color/TextColor"
        android:hint="$$$"
        android:textColorHint="@color/HintTextColor"
        android:textAlignment="center"
        android:layout_below="@+id/textViewEstimatedFare"
        android:layout_alignStart="@+id/textViewEstimatedFare"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:id="@+id/editTextEndLocation"
        android:layout_below="@+id/editTextStartLocation"
        android:textColor="@color/TextColor"
        android:hint="Enter End Location"
        android:textColorHint="@color/HintTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:textSize="30sp"
        android:id="@+id/RequestARideConfirmButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editTextEndLocation"
        android:layout_alignEnd="@+id/editTextEstimatedFare" />


</RelativeLayout>
