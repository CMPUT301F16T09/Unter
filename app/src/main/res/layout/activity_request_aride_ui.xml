<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/background"
    tools:context="com.cmput301f16t09.unter.RequestARideUIActivity">

    <TextView
        android:id="@+id/textViewRequestARide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request A Ride"
        android:fontFamily="sans-serif-smallcaps" />

    <AutoCompleteTextView
        android:id="@+id/editTextRequestRideStartLocation"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/textViewRequestARide"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/input_text_size"
        android:textColor="@color/TextColor"
        android:hint="Enter Start Location"
        android:textColorHint="@color/HintTextColor"
        android:fontFamily="sans-serif-smallcaps" />

    <AutoCompleteTextView
        android:id="@+id/editTextRequestRideEndLocation"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/editTextRequestRideStartLocation"
        android:textSize="@dimen/input_text_size"
        android:textColor="@color/TextColor"
        android:hint="Enter End Location"
        android:textColorHint="@color/HintTextColor"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/textViewRequestRideEstimatedFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextRequestRideEndLocation"
        android:layout_marginStart="100dp"
        android:text="Estimated Fare: "
        android:textSize="@dimen/input_text_size"
        android:textColor="@color/TextColor"
        android:textAlignment="center"/>

    <!-- Input EstimatedFare calculation here-->
    <EditText
        android:id="@+id/editTextRequestRideEstimatedFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewRequestRideEstimatedFare"
        android:layout_toEndOf="@+id/textViewRequestRideEstimatedFare"
        android:text="Fare"
        android:textSize="@dimen/input_text_size"
        android:textColor="@color/TextColor"
        android:fontFamily="sans-serif-smallcaps" />

    <Button
        android:id="@+id/RequestARideConfirmButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/GetEstimateButton"
        android:text="CONFIRM"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="confirmRideRequest" />

    <Button
        android:id="@+id/GetEstimateButton"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/RequestARideConfirmButton"
        android:text = "Get Estimate"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick = "getEstimate" />


    <org.osmdroid.views.MapView android:id="@+id/map"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_below="@+id/textViewRequestRideEstimatedFare"/>
</RelativeLayout>
