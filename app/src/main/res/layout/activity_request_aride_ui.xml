<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.cmput301f16t09.unter.RequestARideUIActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request A Ride"
        android:id="@+id/textEditYourProfile"
        android:textSize="42sp"

        android:textColor="@color/TextColor"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/textName"
        android:textSize="18sp"
        android:textColor="@color/TextColor"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textEditYourProfile"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/textName"
        android:layout_alignStart="@+id/textName"
        android:textColor="@color/TextColor"
        android:hint="Current Name"
        android:textColorHint="@color/HintTextColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_number"
        android:id="@+id/textPhoneNumber"
        android:textSize="18sp"
        android:textColor="@color/TextColor"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textName"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/textName"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/textPhoneNumber"
        android:layout_alignStart="@+id/textName"
        android:textColor="@color/TextColor"
        android:hint="Current Phone Number"
        android:textColorHint="@color/HintTextColor"/>

</RelativeLayout>
