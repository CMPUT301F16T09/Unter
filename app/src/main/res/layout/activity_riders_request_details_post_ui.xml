<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.cmput301f16t09.unter.RidersRequestDetailsPostUIActivity">

    <TextView
        android:id="@+id/RideRequestDetailsPostStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Status: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with CurrentStatus
    <TextView
        android:id="@+id/RideRequestDetailsPostCurrentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/RideRequestDetailsPostStatus"
        android:layout_alignBottom="@+id/RideRequestDetailsPostStatus"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/RideRequestDetailsPostStartLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RideRequestDetailsPostStatus"
        android:layout_marginBottom="5dp"
        android:text="Start Location: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with StartLocationName
    <TextView
        android:id="@+id/RideRequestDetailsPostStartLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/RideRequestDetailsPostStartLocation"
        android:layout_alignBottom="@+id/RideRequestDetailsPostStartLocation"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/RideRequestDetailsPostEndLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RideRequestDetailsPostStartLocation"
        android:layout_marginBottom="5dp"
        android:text="End Location: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with EndLocationName
    <TextView
        android:id="@+id/RideRequestDetailsPostEndLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/RideRequestDetailsPostEndLocation"
        android:layout_alignBottom="@+id/RideRequestDetailsPostEndLocation"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/RideRequestDetailsPostFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RideRequestDetailsPostEndLocation"
        android:layout_marginBottom="5dp"
        android:text="Offered Fare: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with OfferedFareAmount
    <TextView
        android:id="@+id/RideRequestDetailsPostOfferedFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/RideRequestDetailsPostFare"
        android:layout_alignBottom="@+id/RideRequestDetailsPostFare"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/RideRequestDetailsPostDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RideRequestDetailsPostFare"
        android:layout_marginBottom="5dp"
        android:text="Driver: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with Selected Driver's Name
    <TextView
        android:id="@+id/RideRequestDetailsPostDriverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/RideRequestDetailsPostDriver"
        android:layout_alignBottom="@+id/RideRequestDetailsPostDriver"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // Insert Map here
    <org.osmdroid.views.MapView android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_below="@+id/RideRequestDetailsPostDriver"/>

    <Button
        android:id="@+id/RideRequestDetailsCompleteRequestButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Complete Request"
        android:textSize="36sp"
        android:fontFamily="sans-serif-smallcaps" />


</RelativeLayout>
