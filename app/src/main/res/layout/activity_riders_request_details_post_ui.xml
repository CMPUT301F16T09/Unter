<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.cmput301f16t09.unter.RidersRequestDetailsPostUIActivity">

    <TextView
        android:id="@+id/textViewRideRequestDetailsPostStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Status: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with CurrentStatus
    <TextView
        android:id="@+id/textViewRideRequestDetailsPostCurrentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewRideRequestDetailsPostStatus"
        android:layout_alignBottom="@+id/textViewRideRequestDetailsPostStatus"
        android:text="CurrentStatus"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/textViewRideRequestDetailsPostStartLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRideRequestDetailsPostStatus"
        android:layout_marginBottom="5dp"
        android:text="Start Location: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with StartLocationName
    <TextView
        android:id="@+id/textViewRideRequestDetailsPostStartLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewRideRequestDetailsPostStartLocation"
        android:layout_alignBottom="@+id/textViewRideRequestDetailsPostStartLocation"
        android:text="StartLocationName"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/textViewRideRequestDetailsPostEndLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRideRequestDetailsPostStartLocation"
        android:layout_marginBottom="5dp"
        android:text="End Location: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with EndLocationName
    <TextView
        android:id="@+id/textViewRideRequestDetailsPostEndLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewRideRequestDetailsPostEndLocation"
        android:layout_alignBottom="@+id/textViewRideRequestDetailsPostEndLocation"
        android:text="EndLocationName"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/textViewRideRequestDetailsPostFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRideRequestDetailsPostEndLocation"
        android:layout_marginBottom="5dp"
        android:text="Offered Fare: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with OfferedFareAmount
    <TextView
        android:id="@+id/textViewRideRequestDetailsPostEndOfferedFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewRideRequestDetailsPostFare"
        android:layout_alignBottom="@+id/textViewRideRequestDetailsPostFare"
        android:text="OfferedFareAmount"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/textViewRideRequestDetailsPostDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRideRequestDetailsPostFare"
        android:layout_marginBottom="5dp"
        android:text="Driver: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // To be filled in with Selected Driver's Name
    <TextView
        android:id="@+id/textViewRideRequestDetailsPostDriverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewRideRequestDetailsPostDriver"
        android:layout_alignBottom="@+id/textViewRideRequestDetailsPostDriver"
        android:text="DriverName"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps" />

    // Insert Map here


    <Button
        android:id="@+id/RideRequestDetailsCompleteRequestButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Complete Request"
        android:textSize="36sp"
        android:fontFamily="sans-serif-smallcaps" />


</RelativeLayout>
