<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/searchAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input valid address"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/searchAddressRadius"
        android:hint="Input search radius"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchAddress"/>

    <Button
        android:id="@+id/searchAddressConfirm"
        android:text="Confirm"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchAddressRadius"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/searchAddressCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchAddressConfirm"
        android:text="Cancel"
        android:textSize="24sp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>