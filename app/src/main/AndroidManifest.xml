    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainGUIActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateNewUserUIActivity"
            android:label="@string/title_activity_create_new_user_ui"></activity>
        <activity
            android:name=".EditProfileUIActivity"
            android:label="@string/title_activity_edit_profile_ui"></activity>
        <activity
            android:name=".MainScreenUIActivity"
            android:label="@string/title_activity_main_screen_ui"></activity>
        <activity
            android:name=".MyRideOffersUIActivity"
            android:label="@string/title_activity_my_ride_offers_ui"></activity>
        <activity
            android:name=".MyRideRequestsUIActivity"
            android:label="@string/title_activity_my_ride_requests_ui"></activity>
        <activity
            android:name=".ProvideARideUIActivity"
            android:label="@string/title_activity_provide_aride_ui"></activity>
        <activity
            android:name=".RequestARideUIActivity"
            android:label="@string/title_activity_request_aride_ui"></activity>
        <activity
            android:name=".RequestDetailsUIActivity"
            android:label="@string/title_activity_request_details_ui"></activity>
        <activity
            android:name=".RideOfferDetailsUIActivity"
            android:label="@string/title_activity_ride_offer_details_ui"></activity>
        <activity
            android:name=".RidersRequestDetailsPostUIActivity"
            android:label="@string/title_activity_riders_request_details_post_ui"></activity>
        <activity
            android:name=".RidersRequestDetailsPreUIActivity"
            android:label="@string/title_activity_riders_request_details_pre_ui"></activity>
    </application>

    <service android:name=".MyFirebaseMessagingService">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT"/>
        </intent-filter>
    </service>
    <service android:name=".MyFirebaseInstanceIDService">
        <intent-filter>
            <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
        </intent-filter>
    </service>


</manifest>